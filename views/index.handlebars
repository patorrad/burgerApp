<h1>Burgers!</h1>

<h2>Undevoured burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Devoured?</label><br>
    <input type="radio" name="eaten" value="1" checked> Devoured!<br>
    <input type="radio" name="eaten" value="0"> Undevoured
  </div>

  <button type="submit">Add burger</button>
</form>
